# --------------------------------------------
# Fun√ß√µes auxiliares
# --------------------------------------------

def calcular_imc():
    print("\nüîπ Desafio 1 ‚Äî Calculando o IMC")
    peso = float(input("Digite seu peso (kg): "))
    altura = float(input("Digite sua altura (m): "))
    imc = peso / (altura ** 2)
    print(f"Seu IMC √©: {imc:.2f}")
    if imc < 18.5:
        print("Classifica√ß√£o: Abaixo do peso.")
    elif imc < 25:
        print("Classifica√ß√£o: Peso normal.")
    elif imc < 30:
        print("Classifica√ß√£o: Sobrepeso.")
    else:
        print("Classifica√ß√£o: Obesidade.")
    print("--------------------------------------------")


def verificar_habilitacao():
    print("\nüîπ Desafio 2 ‚Äî Verificar se o usu√°rio pode dirigir")
    idade = int(input("Digite sua idade: "))
    if idade >= 18:
        print("Voc√™ pode dirigir! üöó")
    else:
        print("Voc√™ ainda n√£o pode dirigir. ‚õî")
    print("--------------------------------------------")


def calcular_desconto():
    print("\nüîπ Desafio 3 ‚Äî Calcular desconto de compra")
    valor = float(input("Digite o valor da compra: R$ "))
    if valor > 500:
        desconto = valor * 0.20
    elif valor >= 200:
        desconto = valor * 0.10
    else:
        desconto = valor * 0.05
    valor_final = valor - desconto
    print(f"Desconto aplicado: R${desconto:.2f}")
    print(f"Valor final da compra: R${valor_final:.2f}")
    print("--------------------------------------------")


def calcular_media(notas):
    """Retorna a m√©dia das notas"""
    return sum(notas) / len(notas)


def verificar_situacao(media):
    """Retorna a situa√ß√£o do aluno"""
    if media >= 7:
        return "Aprovado"
    elif media >= 5:
        return "Recupera√ß√£o"
    else:
        return "Reprovado"


def sistema_notas():
    print("\nüîπ Desafio 4 e 5 ‚Äî Sistema de Notas (com fun√ß√µes e refatora√ß√£o)")
    nome = input("Digite o nome do aluno: ")
    notas = []
    for i in range(3):
        nota = float(input(f"Digite a nota {i+1}: "))
        notas.append(nota)

    media = calcular_media(notas)
    situacao = verificar_situacao(media)

    print("\nüìò Resultado Final")
    print(f"Aluno: {nome}")
    print(f"M√©dia: {media:.2f}")
    print(f"Situa√ß√£o: {situacao}")
    print("--------------------------------------------")


# --------------------------------------------
# Menu principal
# --------------------------------------------

def menu():
    while True:
        print("\n============================================")
        print("üß† UNIDADE: Introdu√ß√£o a Python ‚Äî Desafios de Programa√ß√£o")
        print("============================================")
        print("1 - Calcular IMC (vari√°veis e operadores)")
        print("2 - Verificar se pode dirigir (estruturas condicionais)")
        print("3 - Calcular desconto de compra (estrat√©gias de solu√ß√£o)")
        print("4 - Sistema de Notas (fun√ß√µes e modulariza√ß√£o)")
        print("5 - Sair")
        print("============================================")

        opcao = input("Escolha uma op√ß√£o: ")

        if opcao == "1":
            calcular_imc()
        elif opcao == "2":
            verificar_habilitacao()
        elif opcao == "3":
            calcular_desconto()
        elif opcao == "4":
            sistema_notas()
        elif opcao == "5":
            print("Encerrando o programa... üëã")
            break
        else:
            print("Op√ß√£o inv√°lida. Tente novamente!")


# --------------------------------------------
# Execu√ß√£o do programa
# --------------------------------------------
menu()
